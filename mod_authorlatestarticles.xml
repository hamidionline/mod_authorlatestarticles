<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.0"
	method="upgrade"
	client="site">
		<name>Latest Articles For Authors</name>
		<creationDate>June 24 2015</creationDate>
		<author>John Toutoulis</author>
		<authorEmail>john_toutoulis@hotmail.com</authorEmail>
		<authorUrl>http://www.unboxholics.com</authorUrl>
		<copyright>Copyright (C) 2015. All rights
   reserved.</copyright>
   		<license>GNU GPL</license>
   		<version>1.0.0</version>
   		<description>Displays article title, status and publish date for the authors</description>
   		
   		<files>
	   		<filename module="mod_authorlatestarticles">mod_authorlatestarticles.php</filename>
	   		<filename>helper.php</filename>
	   		<filename>index.html</filename>
	   		<filename>mod_authorlatestarticles.xml</filename>
	   		<folder>tmpl</folder>
   		</files>
   		
   		<languages>
	   		<language tag="en-GB">language/en-GB/en-GB.mod_authorlatestarticles.ini</language>
   		</languages>
   		
		<media destination="mod_authorlatestarticles" folder="media">
		     <filename>index.html</filename>
		     <folder>css</folder>
		</media>
   		
   		<config>
	   		<form>
		   		<fields name="params">
			   		<fieldset name="basic" label="Basic Options">
				   		<field name="source" label="MOD_AUTHORLATESTARTICLES_FIELD_SOURCE_LABEL" type="list" description="MOD_AUTHORLATESTARTICLES_FIELD_SOURCE_DESC" default="0">
					   		<option value="0">Joomla!</option>
					   		<option value="1">K2</option>
				   		</field>
				   		
				   		<field name="count" type="text" label="MOD_AUTHORLATESTARTICLES_FIELD_COUNT_LABEL" description="MOD_AUTHORLATESTARTICLES_FIELD_COUNT_DESC">
				   		</field>
			   		</fieldset>
				   		
				   	<fieldset name="advanced">
					   	<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC">
					   	</field>
				   	</fieldset>	
		   		</fields>
	   		</form>
   		</config>	
</extension>